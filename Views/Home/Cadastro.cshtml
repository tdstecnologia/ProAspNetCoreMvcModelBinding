@model Pessoa
@{
    ViewBag.Title = "Cadastro Pessoa";
    Layout = "_Layout";
}
<div class="bg-primary panel-body">
    <h1 class="text-center display-4 text-white">Cadastro</h1>
</div>
<form asp-action="Cadastro" method="post">
    <div class="form-group">
        <label asp-for="PessoaId"></label>
        <input asp-for="PessoaId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Sobrenome"></label>
        <input asp-for="Sobrenome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Permissao"></label>
        <select asp-for="Permissao" class="form-control"
                asp-items="@new SelectList(Enum.GetNames(typeof(Permissao)))"></select>
    </div>
    <div class="form-group">
        <label asp-for="EnderecoCasa.Cidade"></label>
        <input asp-for="EnderecoCasa.Cidade" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EnderecoCasa.Pais"></label>
        <input asp-for="EnderecoCasa.Pais" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
